{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "local>USA-RedDragon/renovate-configs"
    ],
    "flux": {
        "enabled": true,
        "fileMatch": ["\\.ya?ml$"]
    },
    "helm-values": {
        "enabled": true,
        "fileMatch": ["\\.ya?ml$"]
    },
    "packageRules": [
        {
            "matchPackagePatterns": ["^ghcr.io\\/usa-reddragon\\/papermc$"],
            "automerge": false
        },
        {
            "matchPackagePatterns": ["^ghcr.io\\/usa-reddragon\\/fabric$"],
            "automerge": false
        }
    ]
}
